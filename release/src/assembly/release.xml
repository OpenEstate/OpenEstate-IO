            <filtered>false</filtered>
            <includes>
                <include>*.txt</include>
                <include>*.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/docs</directory>
            <outputDirectory>docs</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <includes>
                <include>**/*.md</include>
            </includes>
            <excludes>
