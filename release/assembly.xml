<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

  <id>release</id>
  <baseDirectory>${project.parent.artifactId}-${project.version}</baseDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>

  <formats>
    <format>dir</format>
    <format>zip</format>
    <format>tar.gz</format>
    <!--<format>tar.bz2</format>-->
  </formats>

  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
        <unpack>false</unpack>
        <includes>
          <include>${project.groupId}:*</include>
        </includes>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
        <attachmentClassifier>javadoc</attachmentClassifier>
        <unpack>false</unpack>
        <includes>
          <include>${project.groupId}:*</include>
        </includes>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
        <attachmentClassifier>sources</attachmentClassifier>
        <unpack>false</unpack>
        <includes>
          <include>${project.groupId}:*</include>
        </includes>
      </binaries>
    </moduleSet>
  </moduleSets>

  <fileSets>
    <fileSet>
      <directory>${project.parent.basedir}</directory>
      <outputDirectory></outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
      <includes>
        <include>*.txt</include>
        <include>*.md</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/docs</directory>
      <outputDirectory>docs</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <filtered>false</filtered>
      <includes>
        <include>**/*.md</include>
      </includes>
      <excludes>
        <exclude>**/_*.md</exclude>
        <exclude>**/Home.md</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/apidocs</directory>
      <outputDirectory>docs/javadoc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/CasaIT/specs</directory>
      <outputDirectory>docs/specs/CasaIT</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/DaftIE/specs</directory>
      <outputDirectory>docs/specs/DaftIE</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/Filemaker/specs</directory>
      <outputDirectory>docs/specs/Filemaker</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/IDX/specs</directory>
      <outputDirectory>docs/specs/IDX</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/IS24-CSV/specs</directory>
      <outputDirectory>docs/specs/IS24-CSV</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/IS24-XML/specs</directory>
      <outputDirectory>docs/specs/IS24-XML</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/ImmoXML/specs</directory>
      <outputDirectory>docs/specs/ImmoXML-XML</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/ImmobiliareIT/specs</directory>
      <outputDirectory>docs/specs/ImmobiliareIT</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/Kyero/specs</directory>
      <outputDirectory>docs/specs/Kyero</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/OpenImmo/specs</directory>
      <outputDirectory>docs/specs/OpenImmo</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/Trovit/specs</directory>
      <outputDirectory>docs/specs/Trovit</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/WisIT/specs</directory>
      <outputDirectory>docs/specs/WisIT</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/target/3rdparty</directory>
      <outputDirectory>lib/3rdparty</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/misc/licenses</directory>
      <outputDirectory>lib/3rdparty</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
